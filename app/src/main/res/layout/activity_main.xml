<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let us look at the this weeks weather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <EditText
        android:id="@+id/editWelcome"
        android:layout_width="279dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="text"
        android:text="Welcome to my Weather App"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="27dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="321dp"
        android:layout_height="226dp"
        app:srcCompat="@drawable/wallpaper_season"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="169dp" />

    <TextView
        android:id="@+id/txtMetheorologist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's metheorologist is:"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="421dp" />

    <EditText
        android:id="@+id/editStudentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="ST10445995"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="466dp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Tshegofatso Ntsoko"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="546dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Screen"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="619dp" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="619dp" />

</androidx.constraintlayout.widget.ConstraintLayout>